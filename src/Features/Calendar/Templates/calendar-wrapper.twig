{# Calendar Wrapper Template #}
<link rel="stylesheet" href="/assets/css/calendar.css">

<div id="{{ unique_id }}" class="sf-calendar-wrapper"></div>

<script src="/assets/js/calendar.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof StaticForgeCalendar !== 'undefined') {
            new StaticForgeCalendar('{{ unique_id }}', {{ events_json|raw }});
        } else {
            console.error('StaticForgeCalendar class not loaded.');
        }
    });
</script>
