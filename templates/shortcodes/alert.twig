{% set styles = {
    'info': 'background-color: #dbeafe; border-color: #3b82f6; color: #1d4ed8;',
    'warning': 'background-color: #fef9c3; border-color: #eab308; color: #a16207;',
    'error': 'background-color: #fee2e2; border-color: #ef4444; color: #b91c1c;',
    'success': 'background-color: #dcfce7; border-color: #22c55e; color: #15803d;'
} %}

<div style="border-left-width: 4px; border-left-style: solid; padding: 1rem; margin-bottom: 1rem; {{ styles[type] | default(styles['info']) }}" role="alert">
    {{ content | raw }}
</div>
