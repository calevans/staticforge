<!DOCTYPE html>
<!-- Generated by StaticForge -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ title | default('Untitled Page') }}{% if site_name %} | {{ site_name }}{% endif %}{% endblock %}</title>

    {% if description %}
    <meta name="description" content="{{ description }}">
    {% endif %}
{% if tags is defined and tags %}
{% if tags is iterable %}
{% if tags|length > 0 %}
    <meta name="keywords" content="{{ tags|join(', ') }}">
{% endif %}
{% else %}
    <meta name="keywords" content="{{ tags }}">
{% endif %}
{% endif %}

    {# Inject Head Scripts and Styles #}
    {% if styles %}{{ styles | raw }}{% endif %}
    {% if head_scripts %}{{ head_scripts | raw }}{% endif %}

    <link rel="stylesheet" href="{{ site_base_url }}assets/css/main.css?{{ cache_buster }}">

    {% block head %}{% endblock %}
</head>
<body>
    <div class="container">
        <header>
            {% block header %}
            <h1>{% block site_title %}{{ site_name | default('StaticForge') }}{% endblock %}</h1>
            <p>{% block site_description %}A PHP-based static site generator{% endblock %}</p>
            {% endblock %}
        </header>

        <nav>
            {% block navigation %}
            {% include 'menu1.html.twig' %}
            {% endblock %}
        </nav>

        <main>
            <div class="content">
                {% block content %}
                {% if reading_time_label %}
                    <p class="meta"><em>Estimated reading time: {{ reading_time_label }}</em></p>
                {% endif %}
                {{ content | raw }}
                {% endblock %}
            </div>
        </main>

        <footer>
            {% block footer %}
            {% include 'menu2.html.twig' %}
            <p>&copy; {{ "now" | date("Y") }} {{ site_name | default('StaticForge') }}. Built with ❤️ and PHP.</p>
            {% endblock %}
        </footer>
    </div>

    <script src="{{ site_base_url }}assets/js/main.js"></script>
    {% block scripts %}{% endblock %}

    {# Inject Footer Scripts #}
    {% if scripts %}{{ scripts | raw }}{% endif %}
</body>
</html>