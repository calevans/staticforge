<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ title | default('Documentation') }}{% if site_name %} | {{ site_name }}{% endif %}{% endblock %}</title>
    {% if site_base_url %}<base href="{{ site_base_url }}">{% endif %}
    {% if description %}<meta name="description" content="{{ description }}">{% endif %}
    {% if tags is defined and tags %}
        {% if tags is iterable %}
            {% if tags|length > 0 %}<meta name="keywords" content="{{ tags|join(', ') }}">{% endif %}
        {% else %}
            <meta name="keywords" content="{{ tags }}">
        {% endif %}
    {% endif %}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* Brand Colors */
            --primary: #6366f1;
            --primary-light: #818cf8;
            --primary-dark: #4f46e5;
            --secondary: #8b5cf6;
            --accent: #ec4899;

            /* Neutrals */
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;

            /* Semantic Colors */
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --info: #3b82f6;

            /* Gradients */
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-hero: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --gradient-dark: linear-gradient(135deg, #1f2937 0%, #111827 100%);

            /* Typography */
            --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            --font-mono: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;

            /* Spacing */
            --spacing-xs: 0.25rem;
            --spacing-sm: 0.5rem;
            --spacing-md: 1rem;
            --spacing-lg: 1.5rem;
            --spacing-xl: 2rem;
            --spacing-2xl: 3rem;
            --spacing-3xl: 4rem;

            /* Shadows */
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --shadow-glow: 0 0 30px rgba(102, 126, 234, 0.4);

            /* Border Radius */
            --radius-sm: 0.375rem;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
            --radius-xl: 1rem;
            --radius-2xl: 1.5rem;
            --radius-full: 9999px;

            /* Transitions */
            --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
            --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
            --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: var(--font-sans);
            background: var(--gray-50);
            color: var(--gray-900);
            line-height: 1.7;
            font-size: 16px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Navigation */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--gray-200);
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: var(--shadow-sm);
        }

        .navbar-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 var(--spacing-xl);
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 70px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            text-decoration: none;
            color: var(--gray-900);
            font-weight: 700;
            font-size: 1.25rem;
            transition: transform var(--transition-fast);
        }

        .navbar-brand:hover {
            transform: translateY(-2px);
        }

        .navbar-logo {
            width: 40px;
            height: 40px;
            background: var(--gradient-primary);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 800;
            box-shadow: var(--shadow-md);
        }

        .navbar-menu {
            display: flex;
            gap: var(--spacing-xl);
            list-style: none;
        }

        .navbar-menu a {
            color: var(--gray-700);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.95rem;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius-md);
            transition: all var(--transition-base);
            position: relative;
        }

        .navbar-menu a:hover {
            color: var(--primary);
            background: var(--gray-100);
        }

        .navbar-menu a.active::after {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 50%;
            transform: translateX(-50%);
            width: 6px;
            height: 6px;
            background: var(--primary);
            border-radius: var(--radius-full);
        }

        /* Main Content */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--spacing-2xl) var(--spacing-xl);
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: var(--spacing-2xl);
            align-items: start;
        }

        /* Sidebar Navigation */
        .sidebar {
            position: sticky;
            top: 100px;
        }

        .sidebar-section {
            margin-bottom: var(--spacing-xl);
        }

        .sidebar-title {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--gray-500);
            margin-bottom: var(--spacing-md);
        }

        .sidebar-nav {
            list-style: none;
        }

        .sidebar-nav li {
            margin-bottom: var(--spacing-xs);
        }

        .sidebar-nav a {
            display: block;
            padding: var(--spacing-sm) var(--spacing-md);
            color: var(--gray-700);
            text-decoration: none;
            font-size: 0.9rem;
            border-radius: var(--radius-md);
            transition: all var(--transition-base);
            border-left: 3px solid transparent;
        }

        .sidebar-nav a:hover {
            color: var(--primary);
            background: var(--gray-100);
            border-left-color: var(--primary);
            transform: translateX(3px);
        }

        .sidebar-nav a.active {
            color: var(--primary);
            background: rgba(99, 102, 241, 0.1);
            border-left-color: var(--primary);
            font-weight: 600;
        }

        /* Main Content Area */
        .content {
            background: white;
            border-radius: var(--radius-xl);
            padding: var(--spacing-3xl);
            box-shadow: var(--shadow-lg);
            min-height: 80vh;
        }

        .content h1 {
            font-size: 2.5rem;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: var(--spacing-lg);
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .content h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-top: var(--spacing-3xl);
            margin-bottom: var(--spacing-lg);
            color: var(--gray-900);
            padding-bottom: var(--spacing-md);
            border-bottom: 2px solid var(--gray-200);
        }

        .content h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: var(--spacing-xl);
            margin-bottom: var(--spacing-md);
            color: var(--gray-800);
        }

        .content h4 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-top: var(--spacing-lg);
            margin-bottom: var(--spacing-md);
            color: var(--gray-800);
        }

        .content p {
            margin-bottom: var(--spacing-lg);
            color: var(--gray-700);
        }

        .content a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            transition: all var(--transition-base);
            position: relative;
        }

        .content a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        .content ul,
        .content ol {
            margin-bottom: var(--spacing-lg);
            padding-left: var(--spacing-xl);
            color: var(--gray-700);
        }

        .content li {
            margin-bottom: var(--spacing-sm);
            padding-left: var(--spacing-sm);
        }

        .content ul li::marker {
            color: var(--primary);
            font-weight: 700;
        }

        .content blockquote {
            border-left: 4px solid var(--primary);
            background: rgba(99, 102, 241, 0.05);
            padding: var(--spacing-lg);
            margin: var(--spacing-xl) 0;
            border-radius: var(--radius-md);
            font-style: italic;
            color: var(--gray-700);
        }

        .content code {
            font-family: var(--font-mono);
            background: var(--gray-100);
            padding: 0.2em 0.4em;
            border-radius: var(--radius-sm);
            font-size: 0.9em;
            color: var(--primary-dark);
            font-weight: 500;
        }

        .content pre {
            background: var(--gray-900);
            color: var(--gray-100);
            padding: var(--spacing-lg);
            border-radius: var(--radius-lg);
            overflow-x: auto;
            margin: var(--spacing-lg) 0;
            box-shadow: var(--shadow-lg);
        }

        .content pre code {
            background: none;
            padding: 0;
            color: inherit;
            font-size: 0.875rem;
            line-height: 1.7;
        }

        .content table {
            width: 100%;
            border-collapse: collapse;
            margin: var(--spacing-xl) 0;
            background: white;
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
        }

        .content th {
            background: var(--gradient-primary);
            color: white;
            padding: var(--spacing-md) var(--spacing-lg);
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .content td {
            padding: var(--spacing-md) var(--spacing-lg);
            border-bottom: 1px solid var(--gray-200);
            color: var(--gray-700);
        }

        .content tr:hover td {
            background: var(--gray-50);
        }

        .content img {
            max-width: 100%;
            height: auto;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            margin: var(--spacing-xl) 0;
        }

        /* Table of Contents */
        .toc {
            position: sticky;
            top: 100px;
        }

        .toc-title {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--gray-500);
            margin-bottom: var(--spacing-md);
        }

        .toc-nav {
            list-style: none;
        }

        .toc-nav li {
            margin-bottom: var(--spacing-xs);
        }

        .toc-nav a {
            display: block;
            padding: var(--spacing-sm);
            color: var(--gray-600);
            text-decoration: none;
            font-size: 0.85rem;
            border-left: 2px solid transparent;
            transition: all var(--transition-base);
        }

        .toc-nav a:hover {
            color: var(--primary);
            border-left-color: var(--primary);
            transform: translateX(3px);
        }

        .toc-nav a.active {
            color: var(--primary);
            border-left-color: var(--primary);
            font-weight: 600;
        }

        .toc-nav .toc-h3 {
            padding-left: var(--spacing-lg);
            font-size: 0.8rem;
        }

        /* Alert Boxes */
        .alert {
            padding: var(--spacing-lg);
            border-radius: var(--radius-lg);
            margin: var(--spacing-xl) 0;
            border-left: 4px solid;
            display: flex;
            gap: var(--spacing-md);
            align-items: start;
        }

        .alert-info {
            background: rgba(59, 130, 246, 0.1);
            border-left-color: var(--info);
            color: var(--gray-800);
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border-left-color: var(--success);
            color: var(--gray-800);
        }

        .alert-warning {
            background: rgba(245, 158, 11, 0.1);
            border-left-color: var(--warning);
            color: var(--gray-800);
        }

        .alert-error {
            background: rgba(239, 68, 68, 0.1);
            border-left-color: var(--error);
            color: var(--gray-800);
        }

        /* Badges */
        .badge {
            display: inline-block;
            padding: 0.25em 0.75em;
            border-radius: var(--radius-full);
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .badge-primary {
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary-dark);
        }

        .badge-success {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        /* Cards */
        .card {
            background: white;
            border-radius: var(--radius-lg);
            padding: var(--spacing-lg);
            box-shadow: var(--shadow-md);
            margin: var(--spacing-lg) 0;
            transition: all var(--transition-base);
        }

        .card:hover {
            box-shadow: var(--shadow-xl);
            transform: translateY(-2px);
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: var(--spacing-md);
            color: var(--gray-900);
        }

        /* Footer */
        .footer {
            background: var(--gradient-dark);
            color: var(--gray-400);
            padding: var(--spacing-3xl) var(--spacing-xl);
            margin-top: var(--spacing-3xl);
        }

        .footer-container {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--spacing-2xl);
        }

        .footer-section h3 {
            color: white;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: var(--spacing-md);
        }

        .footer-section ul {
            list-style: none;
        }

        .footer-section a {
            color: var(--gray-400);
            text-decoration: none;
            display: block;
            padding: var(--spacing-xs) 0;
            transition: color var(--transition-base);
        }

        .footer-section a:hover {
            color: var(--primary-light);
        }

        .footer-bottom {
            max-width: 1400px;
            margin: var(--spacing-2xl) auto 0;
            padding-top: var(--spacing-xl);
            border-top: 1px solid var(--gray-700);
            text-align: center;
            font-size: 0.875rem;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .content > * {
            animation: fadeIn var(--transition-slow) ease-out;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .main-container {
                grid-template-columns: 200px 1fr;
                gap: var(--spacing-xl);
            }

            .toc {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .main-container {
                grid-template-columns: 1fr;
                padding: var(--spacing-lg);
            }

            .sidebar {
                display: none;
            }

            .content {
                padding: var(--spacing-xl);
            }

            .content h1 {
                font-size: 2rem;
            }

            .content h2 {
                font-size: 1.5rem;
            }

            .navbar-menu {
                display: none;
            }

            .footer-container {
                grid-template-columns: 1fr;
            }
        }

        /* Utility Classes */
        .text-center { text-align: center; }
        .text-primary { color: var(--primary); }
        .text-muted { color: var(--gray-500); }
        .font-mono { font-family: var(--font-mono); }
        .mt-0 { margin-top: 0 !important; }
        .mb-0 { margin-bottom: 0 !important; }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">
                <div class="navbar-logo">SF</div>
                <span>StaticForge</span>
            </a>
            <ul class="navbar-menu">
                {{ menu1|raw }}
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Left Sidebar -->
        <aside class="sidebar">
            {{ menu1|raw }}
        </aside>

        <!-- Main Content -->
        <main class="content">
            {% block content %}
                {{ content|raw }}
            {% endblock %}
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h3>StaticForge</h3>
                <p>A powerful PHP-based static site generator with an event-driven architecture.</p>
            </div>
            <div class="footer-section">
                <h3>Documentation</h3>
                <ul>
                    <li><a href="/">Quick Start</a></li>
                    <li><a href="/CONFIGURATION.html">Configuration</a></li>
                    <li><a href="/FEATURE_DEVELOPMENT.html">Features</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Community</h3>
                <ul>
                    <li><a href="https://github.com/calevans/staticforge">GitHub</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Discord</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 {{ site_name }}. {{ site_tagline | default('Built with ❤️ and PHP') }}</p>
        </div>
    </footer>

    <script>
        // Auto-generate Table of Contents
        document.addEventListener('DOMContentLoaded', function() {
            const content = document.querySelector('.content');
            const tocNav = document.querySelector('.toc-nav');

            if (content && tocNav && !tocNav.innerHTML.trim()) {
                const headings = content.querySelectorAll('h2, h3');
                const tocHtml = [];

                headings.forEach((heading, index) => {
                    const id = heading.id || `heading-${index}`;
                    if (!heading.id) {
                        heading.id = id;
                    }

                    const level = heading.tagName.toLowerCase();
                    const text = heading.textContent;

                    tocHtml.push(`<li class="toc-${level}"><a href="#${id}">${text}</a></li>`);
                });

                if (tocHtml.length > 0) {
                    tocNav.innerHTML = tocHtml.join('');
                }
            }

            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Highlight active TOC item on scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.id;
                        document.querySelectorAll('.toc-nav a').forEach(link => {
                            link.classList.remove('active');
                        });
                        const activeLink = document.querySelector(`.toc-nav a[href="#${id}"]`);
                        if (activeLink) {
                            activeLink.classList.add('active');
                        }
                    }
                });
            }, { rootMargin: '-100px 0px -80% 0px' });

            document.querySelectorAll('.content h2, .content h3').forEach(heading => {
                observer.observe(heading);
            });
        });
    </script>
</body>
</html>
